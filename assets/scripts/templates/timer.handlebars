        <button data-id='{{timer.id}}' class='start-button'>Start</button>
        <button data-id='{{timer.id}}' class='reset-button'>Reset</button>
        <button data-id='{{timer.id}}' class='pause-button'>Pause</button>
        <button data-id='{{timer.id}}' class='resume-button'>Resume</button>
        <button data-id='{{timer.id}}' class='delete-button'>Remove</button>
        <button data-id='{{timer.id}}' class='update-button' data-toggle='modal' data-target="#updateModal">Update</button>
      </div>
  </section>
