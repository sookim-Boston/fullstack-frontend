  <section data-id="{{timer.id}}">
      <div class="container">
        <div id={{timer.id}} class="pomodoro-timer">
          <div class="time">
            <span class="minutes">
              {{#if timer.minutes}}
              {{zero timer.minutes}}
              {{else}}
              00
              {{/if}}
            </span>
            <span class="colon">:</span>
            <span class="seconds">
              {{#if timer.seconds}}
              {{zero timer.seconds}}
              {{else}}
              00
              {{/if}}
            </span>
          </div>
        </div>
